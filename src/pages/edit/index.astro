---
import { AdvancedEditor } from "@/components/Editor";
import { EditorBar } from "@/components/EditorBar";
import { EditorProvider } from "@/components/EditorContext";
import { Separator } from "@/components/ui/separator";
import Layout from "@/layouts/Layout.astro";
---

<Layout>
  <div class="flex min-h-[calc(100vh-100px)] bg-gray-50">
    <div class="flex-1 p-8 bg-white shadow-lg rounded-lg m-4">
      <EditorProvider client:only="react">
        <EditorBar client:only="react" />
        <AdvancedEditor client:only="react" />
      </EditorProvider>
    </div>

    <div class="w-[400px] p-6 m-4 bg-white rounded-lg shadow-sm">
      <div class="sticky top-6 space-y-8">
        <div>
          <h2 class="text-xl font-semibold text-gray-800 mb-6">Editor Guide</h2>
          <div class="space-y-6">
            <section>
              <h3 class="text-sm font-medium text-gray-700 mb-3">
                Basic Formatting
              </h3>
              <ul class="space-y-2 text-sm text-gray-600">
                <li class="flex items-center gap-2">
                  <span class="w-1.5 h-1.5 bg-gray-400 rounded-full"></span>
                  Select text to show formatting options
                </li>
                <li class="flex items-center gap-2">
                  <span class="w-1.5 h-1.5 bg-gray-400 rounded-full"></span>
                  <span
                    >Use <kbd
                      class="px-2 py-0.5 bg-gray-100 rounded text-gray-700 text-xs"
                      >B</kbd
                    > for bold</span
                  >
                </li>
                <li class="flex items-center gap-2">
                  <span class="w-1.5 h-1.5 bg-gray-400 rounded-full"></span>
                  <span
                    >Use <kbd
                      class="px-2 py-0.5 bg-gray-100 rounded text-gray-700 text-xs"
                      >I</kbd
                    > for italic</span
                  >
                </li>
                <li class="flex items-center gap-2">
                  <span class="w-1.5 h-1.5 bg-gray-400 rounded-full"></span>
                  <span
                    >Use <kbd
                      class="px-2 py-0.5 bg-gray-100 rounded text-gray-700 text-xs"
                      >U</kbd
                    > for underline</span
                  >
                </li>
              </ul>
            </section>

            <section>
              <h3 class="text-sm font-medium text-gray-700 mb-3">
                Block Elements
              </h3>
              <ul class="space-y-2 text-sm text-gray-600">
                <li class="flex items-center gap-2">
                  <span class="w-1.5 h-1.5 bg-gray-400 rounded-full"></span>
                  Type <code class="px-1.5 text-gray-700 bg-gray-100 rounded"
                    >/</code
                  > to show block options
                </li>
                <li class="flex items-center gap-2">
                  <span class="w-1.5 h-1.5 bg-gray-400 rounded-full"></span>
                  Choose headings, lists, quotes etc.
                </li>
                <li class="flex items-center gap-2">
                  <span class="w-1.5 h-1.5 bg-gray-400 rounded-full"></span>
                  Press <kbd
                    class="px-2 py-0.5 bg-gray-100 rounded text-gray-700 text-xs"
                    >Enter</kbd
                  > twice to exit blocks
                </li>
              </ul>
            </section>

            <section>
              <h3 class="text-sm font-medium text-gray-700 mb-3">
                Advanced Features
              </h3>
              <ul class="space-y-2 text-sm text-gray-600">
                <li class="flex items-center gap-2">
                  <span class="w-1.5 h-1.5 bg-gray-400 rounded-full"></span>
                  Create tables with columns and rows
                </li>
                <li class="flex items-center gap-2">
                  <span class="w-1.5 h-1.5 bg-gray-400 rounded-full"></span>
                  Add code blocks with syntax highlighting
                </li>
                <li class="flex items-center gap-2">
                  <span class="w-1.5 h-1.5 bg-gray-400 rounded-full"></span>
                  Embed external content like videos
                </li>
                <li class="flex items-center gap-2">
                  <span class="w-1.5 h-1.5 bg-gray-400 rounded-full"></span>
                  Use callouts for important notes
                </li>
                <li class="flex items-center gap-2">
                  <span class="w-1.5 h-1.5 bg-gray-400 rounded-full"></span>
                  Drag and drop blocks to reorder
                </li>
              </ul>
            </section>
          </div>
        </div>

        <p class="text-xs text-gray-400 italic">
          Pro tip: Hover over buttons to see keyboard shortcuts
        </p>
      </div>
    </div>
  </div>
</Layout>
