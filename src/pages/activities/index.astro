---
import { db } from "@/db";
import Layout from "@/layouts/Layout.astro";

const activities = await db.query.farmActivity.findMany();
---

<Layout>
  <section class="py-16 bg-gradient-to-b from-white to-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h1
          class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-indigo-600 to-blue-500 bg-clip-text text-transparent"
        >
          Our Activities
        </h1>
        <p class="mt-4 text-lg text-muted-foreground">
          Discover exciting farm activities and experiences
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          activities.map((activity) => (
            <a
              href={`/activities/${activity.id}`}
              class="group relative mb-4 bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 overflow-hidden block"
            >
              <div class="absolute inset-0 bg-gradient-to-r from-indigo-600/10 to-blue-500/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300" />

              <div class="p-6">
                <h2 class="text-xl font-bold text-gray-900 group-hover:text-indigo-600 transition-colors duration-300">
                  {activity.name}
                </h2>

                <p class="mt-3 text-gray-600 leading-relaxed">
                  {activity.description?.find(
                    (desc) => desc.type === "paragraph"
                  )?.content || "No description"}
                </p>

                <div class="mt-4 pt-4 border-t border-gray-100 flex items-center justify-between">
                  <p class="text-sm text-muted-foreground">
                    Added{" "}
                    {new Date(activity.createdAt).toLocaleDateString("en-US", {
                      month: "long",
                      day: "numeric",
                      year: "numeric",
                    })}
                  </p>
                  <span class="text-sm font-medium text-indigo-600 hover:text-indigo-700 transition-colors duration-200">
                    Read more â†’
                  </span>
                </div>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </section>
</Layout>
