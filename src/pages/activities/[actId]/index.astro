---
import { db } from "@/db";
import Layout from "@/layouts/Layout.astro";
import { ContentBlock } from "@/types/content";
const { actId } = Astro.params;

if (!actId) {
  Astro.redirect("/activities");
}

const activity = await db.query.farmActivity.findFirst({
  where: (table, { eq }) => eq(table.id, actId as string),
});

if (!activity) {
  return Astro.redirect("/activities");
}
---

<Layout>
  <div class="max-w-4xl mx-auto px-4 py-12">
    <header class="mb-12 text-center">
      <h1
        transition:name={`activity-name-${activity.id}`}
        class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-indigo-600 to-blue-500 bg-clip-text text-transparent mb-4"
      >
        {activity.name}
      </h1>
      <div class="flex items-center justify-center gap-4 text-sm text-gray-600">
        <span class="flex items-center">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5 mr-2"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
            ></path>
          </svg>
          {new Date(activity.createdAt).toLocaleDateString()}
        </span>
        {
          activity.active && (
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
              Active
            </span>
          )
        }
      </div>
    </header>

    {
      activity.image && (
        <div class="mb-12 rounded-2xl overflow-hidden shadow-xl">
          <img
            transition:name={`activity-image-${activity.id}`}
            loading="eager"
            src={activity.image}
            alt={activity.name}
            class="w-full h-[400px] object-cover"
          />
        </div>
      )
    }

    <div class="prose prose-lg max-w-none">
      <div class="space-y-6 bg-white rounded-2xl p-8 shadow-sm">
        {
          activity?.description && activity.description.length > 0 ? (
            activity.description.map((block: ContentBlock) => (
              <div class="transition-all duration-200 hover:bg-gray-50 rounded-lg p-4">
                {block.type === "heading" && (
                  <h2 class="text-3xl font-bold text-gray-900 mb-4">
                    {block.content}
                  </h2>
                )}
                {block.type === "paragraph" && (
                  <p class="text-gray-700 leading-relaxed whitespace-pre-wrap">
                    {block.content}
                  </p>
                )}
                {block.type === "list" && (
                  <div class="text-gray-700 leading-relaxed whitespace-pre-wrap pl-4 border-l-4 border-indigo-100">
                    {block.content}
                  </div>
                )}
                {block.type === "link" && (
                  <a
                    href={block.content}
                    class="text-indigo-600 hover:text-indigo-800 underline decoration-2 decoration-indigo-200 hover:decoration-indigo-500 transition-all duration-200"
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    {block.content}
                  </a>
                )}
                {block.type === "image" && (
                  <img
                    src={block.content || "https://placehold.co/600x400"}
                    alt="Content"
                    class="rounded-xl shadow-md max-w-full h-auto hover:shadow-lg transition-shadow duration-200"
                  />
                )}
              </div>
            ))
          ) : (
            <div class="text-center py-12">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-16 w-16 mx-auto text-gray-400 mb-4"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"
                />
              </svg>
              <p class="text-xl text-gray-500">
                No content available for this activity yet.
              </p>
            </div>
          )
        }
      </div>
    </div>
  </div>
</Layout>
