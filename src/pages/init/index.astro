---
import { actions } from "astro:actions";
---

<form
  method="POST"
  action={actions.init}
  class="max-w-md mx-auto mt-12 p-8 bg-white/80 backdrop-blur-sm rounded-xl shadow-xl border border-gray-100"
>
  <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">
    Create Account
  </h2>

  <div class="space-y-5">
    <div class="relative">
      <label for="name" class="text-sm font-medium text-gray-700 mb-1 block">
        Name
      </label>
      <input
        type="text"
        name="name"
        id="name"
        class="w-full px-4 py-2.5 h-12 rounded-lg border border-gray-400 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 outline-none transition-all"
        placeholder="Enter your name"
        required
      />
    </div>

    <div class="relative">
      <label for="email" class="text-sm font-medium text-gray-700 mb-1 block">
        Email
      </label>
      <input
        type="email"
        name="email"
        id="email"
        class="w-full px-4 py-2.5 h-12 rounded-lg border border-gray-400 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 outline-none transition-all"
        placeholder="you@example.com"
        required
      />
    </div>

    <div class="relative">
      <label
        for="password"
        class="text-sm font-medium text-gray-700 mb-1 block"
      >
        Password
      </label>
      <input
        type="password"
        name="password"
        id="password"
        class="w-full px-4 py-2.5 h-12 rounded-lg border border-gray-400 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 outline-none transition-all"
        required
      />
    </div>
  </div>

  <button
    type="submit"
    class="w-full mt-8 py-2.5 px-4 bg-indigo-600 text-white font-medium rounded-lg
           hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2
           focus:ring-indigo-500 transition-colors duration-200 ease-in-out
           shadow-lg shadow-indigo-200"
  >
    Create Account
  </button>
</form>
