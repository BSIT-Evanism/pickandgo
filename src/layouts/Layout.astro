---
import { MainHeader } from "@/components/Header";
import { PromotionPlat } from "@/components/PromotionPlat";
import { Signout } from "@/components/Signout";
import { Toaster } from "@/components/ui/sonner";
import { db } from "@/db";
import "@/styles/globals.css";
import { ClientRouter } from "astro:transitions";

const promotionData = await db.query.promotions.findFirst();

// Set cookie only if it doesn't exist

const { title } = Astro.props;
const status = Astro.locals.user;

// Move promotion handling to the top
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <script is:inline src="https://cloud.umami.is/script.js" data-website-id="8ce19401-77af-41af-ae50-793b53f32be5"></script>
    <!-- import this BEFORE any scripts -->
    <!-- <script is:inline src="https://unpkg.com/react-scan/dist/auto.global.js"
    ></script> -->
    <ClientRouter />
    <title>{title}</title>
  </head>
  <body>
    <main>
      <PromotionPlat
        promotion={promotionData}
        open={Astro.locals.promotion === "open"}
        client:only="react"
      />
      <Toaster client:load />
      <MainHeader pathname={Astro.url.pathname} session={status} client:load />
      <slot />
    </main>
  </body>
</html>

<style is:global>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  /* * {
    border: 1px solid red;
  } */
</style>
