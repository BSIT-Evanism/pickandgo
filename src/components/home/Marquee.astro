---
const { data } = Astro.props;
---

<div class="w-full flex justify-center items-center mb-6">
  <div
    class="w-[80vw] h-[10vh] bg-slate-100 flex justify-center items-center rounded-md"
  >
    <div class="flex items-center gap-4 animate-marquee">
      {
        data?.items?.map((item: string) => (
          <span class="text-lg font-medium text-slate-700 whitespace-nowrap">
            {item}
          </span>
        )) || (
          <span class="text-lg font-medium text-slate-700">
            Marquee Content
          </span>
        )
      }
    </div>
  </div>
</div>

<style>
  @keyframes marquee {
    0% {
      transform: translateX(100%);
    }
    100% {
      transform: translateX(-100%);
    }
  }

  .animate-marquee {
    animation: marquee 20s linear infinite;
  }
</style>
