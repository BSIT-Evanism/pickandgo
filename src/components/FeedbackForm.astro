---
import { db } from "@/db";
import { actions } from "astro:actions";
const { session } = Astro.props;

const user = Astro.locals.session
  ? await db.query.user.findFirst({
      where: (table, { eq }) =>
        eq(table.id, Astro.locals.session?.userId as string),
    })
  : null;
---

<div class="w-full max-w-3xl mx-auto px-4 py-16">
  {
    user?.hasFeedback ? (
      <p class="text-center text-gray-500 pt-4">
        You have already submitted feedback
      </p>
    ) : (
      <form
        action={actions.submitFeedback}
        method="post"
        class="bg-white/80 backdrop-blur-sm rounded-xl shadow-xl border border-gray-100 p-8"
      >
        <h2 class="text-3xl font-extrabold text-gray-900 mb-8 text-center">
          Share Your Feedback
        </h2>

        <div class="space-y-6">
          <div class="relative">
            <label
              for="name"
              class="text-sm font-medium text-gray-700 mb-1 block"
            >
              Name
            </label>
            <input
              type="text"
              id="name"
              name="name"
              class="w-full px-4 py-2.5 h-12 rounded-lg border border-gray-400 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 outline-none transition-all"
              placeholder="Enter your name"
              required
            />
          </div>

          <div class="relative">
            <label
              for="email"
              class="text-sm font-medium text-gray-700 mb-1 block"
            >
              Email
            </label>
            <input
              type="email"
              id="email"
              name="email"
              class="w-full px-4 py-2.5 h-12 rounded-lg border border-gray-400 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 outline-none transition-all"
              placeholder="you@example.com"
              required
            />
          </div>

          <div class="relative">
            <label
              for="subject"
              class="text-sm font-medium text-gray-700 mb-1 block"
            >
              Subject
            </label>
            <input
              type="text"
              id="subject"
              name="subject"
              class="w-full px-4 py-2.5 h-12 rounded-lg border border-gray-400 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 outline-none transition-all"
              placeholder="What's this about?"
              required
            />
          </div>

          <div class="relative">
            <label
              for="message"
              class="text-sm font-medium text-gray-700 mb-1 block"
            >
              Message
            </label>
            <textarea
              id="message"
              name="message"
              rows="4"
              class="w-full px-4 py-3 rounded-lg border border-gray-400 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 outline-none transition-all resize-none"
              placeholder="Tell us your thoughts..."
              required
            />
          </div>
        </div>

        {session ? (
          <button
            type="submit"
            class="w-full mt-8 py-2.5 px-4 bg-indigo-600 text-white font-medium rounded-lg
             hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2
             focus:ring-indigo-500 transition-colors duration-200 ease-in-out
             shadow-lg shadow-indigo-200"
          >
            Send Feedback
          </button>
        ) : (
          <p class="text-center text-gray-500 pt-4">
            Please sign in to send feedback
          </p>
        )}
      </form>
    )
  }
</div>
